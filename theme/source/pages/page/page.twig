{% extends "layouts/layout.twig" %}

{% block content %}
	{% embed "modules/section/section.twig" with { modifiers: ['page', 'content'], title: post.title, content: post.content } %}
		{% block content %}
			{% if globals.gulp %}
				{{ content }}
			{% else %}
				{{ content|wpautop }}
			{% endif %}
		{% endblock %}
	{% endembed %}
{% endblock %}
