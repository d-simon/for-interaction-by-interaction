<!doctype html>
<!--[if IE 7]>         <html lang="en" class="no-js ie7 lte-ie9 lte-ie8 lte-ie7"> <![endif]-->
<!--[if IE 8]>         <html lang="en" class="no-js ie8 lte-ie9 lte-ie8">         <![endif]-->
<!--[if IE 9]>         <html lang="en" class="no-js ie9 lte-ie9">                 <![endif]-->
<!--[if gt IE 9]><!--> <html lang="en" class="no-js">                         <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% if meta.title %}{{ meta.title }} â€“ {% endif %}{{ globals.page_title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/assets/css/main{% if not globals.env.dev %}.min{% endif %}.css">
    <link rel="stylesheet" href="/preview/assets/css/main{% if not globals.env.dev %}.min{% endif %}.css">

    {% if globals.env.dev %}
    <script src="{{ globals.theme_root }}/assets/js/dev.js"></script>
    {% endif %}
    <script src="/assets/js/head{% if not globals.env.dev %}.min{% endif %}.js"></script>
</head>
<body>
    <div class="sg_wrapper">
        <a href="/" class="sg_logo sg_logo--module">{{ globals.page_title }}</a>
        <h1 class="sg_title">
            <span>{% if meta.title %}{{ meta.title }}{% else %}{{ globals.page_title }}{% endif %}</span>
        </h1>

        <h2 class="sg_h2">Demo</h2>
        <div class="sg_demo">
            {% block content %}
            {% endblock %}
        </div>

        <h2 class="sg_h2">Code</h2>
        <pre class="sg_code hljs">{{ meta.code }}</pre>

        {% if meta.documentation %}
            <div class="sg_documentation">
                <h2 class="sg_h2">Documentation</h2>

                {{ meta.documentation }}
            </div>
        {% endif %}

        <script src="/assets/js/main{% if not globals.env.dev %}.min{% endif %}.js"></script>

        {% block scripts %}
            {% if meta.testScripts %}
                <h2 class="sg_h2">QUnit tests</h2>

                {% include "preview/includes/qunit.twig" %}
            {% endif %}
        {% endblock %}
    </div>
</body>
</html>
